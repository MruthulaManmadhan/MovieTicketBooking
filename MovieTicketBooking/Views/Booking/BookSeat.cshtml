@model MovieTicketBooking.Models.MovieTicket

@{
    ViewData["Title"] = "BookSeat";
}

<h2>Book Seat</h2>

@{
     var data = ViewData["message"];
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookSeat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="NumberSeats" class="control-label"></label>*@
                Enter Number of seats
                <input asp-for="NumberSeats" class="form-control" type="number" min="1" max="@data" required />
                <span asp-validation-for="NumberSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="../">Back to Movies</a>
</div>

